#ifndef __MenuDef_fh__
#define __MenuDef_fh__

#include "CoreResTypes.h"
#include "PMTypes.fh"

#ifdef __ODFRC__

type MenuDefWithIconAttributes (kMenuRsrcType)
{
    longint = $$CountOf(Menus);
    array Menus
    {
        longint;                    // global action id, eg. kEditActionID
        wstring;                    // path to the menu you want this item to be on, eg. "Main:&File"
        double;                        // Menu position - items on same menu will be sorted by this number
        integer;                    // bool isDynamic - true if this menu has to rebuild before showing, else false.
        longint;                    // Plugin ID for custom image to be shown on the left of the menu string.
        longint;                    // Resource ID for custom image to be shown on the left of the menu string.
    }
};

type MenuDef (kMenuRsrcType)
{
    longint = $$CountOf(Menus);
    array Menus
    {
        longint;                    // global action id, eg. kEditActionID
        wstring;                    // path to the menu you want this item to be on, eg. "Main:&File"
        double;                        // Menu position - items on same menu will be sorted by this number
        integer;                    // bool isDynamic - true if this menu has to rebuild before showing, else false.
        longint = 0;                    // Plugin ID for custom image to be shown on the left of the menu string.
        longint = 0;                    // Resource ID for custom image to be shown on the left of the menu string.
    }
};

#endif // __ODFRC__

#endif // __MenuDef_fh__

